generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  email    String   @unique
  password String
  quizUsage Int     @default(0)
  lastQuizAt   DateTime?

  subscriptionPlan     String?   // "free", "pro", "premium"
  subscriptionStatus   String?   // "active", "canceled"
  subscriptionStart    DateTime? // when the subscription started
  subscriptionEnd      DateTime? // when it will expire
  stripeCustomerId    String?

  features           Json?

  quizzes  Quiz[]
}


model Quiz {
  id           Int        @id @default(autoincrement())
  title        String
  instructions String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  questions    Question[]
  userId       Int
  user         User       @relation(fields: [userId], references: [id])
}

model Question {
  id        Int      @id @default(autoincrement())
  question  String
  options   String[] // PostgreSQL array
  answer    String

  quizId    Int
  quiz      Quiz     @relation(fields: [quizId], references: [id])
}

model PublicUsage {
  id        String   @id                      
  count     Int      @default(0)              
  resetAt   DateTime?       
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
  ip       String?
}
