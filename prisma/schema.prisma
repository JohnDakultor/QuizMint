generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String   @id @default(cuid()) // String ID for OAuth compatibility
  email               String   @unique
  password            String?  // optional for OAuth users
  username            String?  @unique
  authProvider        String   @default("credentials") // "google" | "credentials"

  name                String?
  image               String?

  quizUsage           Int      @default(0)
  lastQuizAt          DateTime?
  subscriptionEnd     DateTime?
  subscriptionPlan    String?
  subscriptionStart   DateTime?
  subscriptionStatus  String?
  stripeCustomerId    String?
  paypalCustomerId    String?
  adaptiveLearning    Boolean? @default(false)
  aiDifficulty        String?

  quizzes             Quiz[]
  resetTokens         PasswordResetToken[]
  policyAcceptances   UserPolicyAcceptance[]
  paypalSubscriptions PayPalSubscription[]
}

model UserPolicyAcceptance {
  id         Int     @id @default(autoincrement())
  user       User    @relation(fields: [userId], references: [id])
  userId     String
  policyType String   // e.g., "terms", "privacy"
  accepted   Boolean  @default(false)
  acceptedAt DateTime @default(now())

  @@unique([userId, policyType])
}

model Quiz {
  id           Int        @id @default(autoincrement())
  title        String
  instructions String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  userId       String
  user         User       @relation(fields: [userId], references: [id])
  questions    Question[]
}

model Question {
  id          Int      @id @default(autoincrement())
  question    String
  options     String[]
  answer      String
  explanation String?
  hint        String?
  quizId      Int
  quiz        Quiz     @relation(fields: [quizId], references: [id])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model PayPalSubscription {
  id               String   @id @default(cuid())
  subscriptionId   String   @unique
  planId           String
  planType         String
  status           String
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  startTime        DateTime
  nextBillingTime  DateTime?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model PublicUsage {
  id        String    @id
  count     Int       @default(0)
  resetAt   DateTime?
  updatedAt DateTime  @updatedAt
  createdAt DateTime  @default(now())
  ip        String?
}

