generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int       @id @default(autoincrement())
  email              String    @unique
  password           String
  username           String    @unique
  quizUsage          Int       @default(0)
  lastQuizAt         DateTime?
  subscriptionEnd    DateTime?
  subscriptionPlan   String?
  subscriptionStart  DateTime?
  subscriptionStatus String?
  stripeCustomerId   String?
  paypalCustomerId   String?
  adaptiveLearning   Boolean?  @default(false)
  aiDifficulty       String?
  quizzes            Quiz[]

  resetTokens        PasswordResetToken[]

  policyAcceptances  UserPolicyAcceptance[]

  paypalSubscriptions PayPalSubscription[]
}


model PayPalSubscription {
  id               String   @id @default(cuid())
  subscriptionId   String   @unique
  planId           String
  planType         String   // "pro" or "premium"
  status           String   // ACTIVE, CANCELLED, SUSPENDED, EXPIRED
  userId           Int
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  startTime        DateTime
  nextBillingTime  DateTime?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  @@index([userId])
  @@index([status])
  @@index([subscriptionId])
  
  @@map("paypal_subscriptions")
}

model Quiz {
  id           Int        @id @default(autoincrement())
  title        String
  instructions String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  userId       Int
  questions    Question[]
  user         User       @relation(fields: [userId], references: [id])
}

model Question {
  id       Int      @id @default(autoincrement())
  question String
  options  String[]
  answer   String
  quizId   Int
  quiz     Quiz     @relation(fields: [quizId], references: [id])

  explanation  String?  
  hint         String? 

}

model PublicUsage {
  id        String    @id
  count     Int       @default(0)
  resetAt   DateTime?
  updatedAt DateTime  @updatedAt
  createdAt DateTime  @default(now())
  ip        String?
}


model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  expiresAt DateTime
  createdAt DateTime @default(now())
}


model UserPolicyAcceptance {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  policyType String   // e.g., "terms", "privacy"
  accepted   Boolean  @default(false)
  acceptedAt DateTime @default(now())

  @@unique([userId, policyType]) // ensures one record per user per policy
}
