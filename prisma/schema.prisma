generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String   @id @default(cuid()) // String ID for OAuth compatibility
  email               String   @unique
  password            String?  // optional for OAuth users
  username            String?  @unique
  authProvider        String   @default("credentials") // "google" | "credentials"

  name                String?
  image               String?

  quizUsage           Int      @default(0)
  lastQuizAt          DateTime?
  lastQuizAdResetAt   DateTime?
  quizAdResetCount    Int      @default(0)
  quizAdResetWindowAt DateTime?
  subscriptionEnd     DateTime?
  subscriptionPlan    String?
  subscriptionStart   DateTime?
  subscriptionStatus  String?
  stripeCustomerId    String?
  paypalCustomerId    String?
  adaptiveLearning    Boolean? @default(false)
  aiDifficulty        String?

  lessonPlanUsage     Int  @default(0)  
  lastLessonPlanAt    DateTime?

  quizzes             Quiz[]
  resetTokens         PasswordResetToken[]
  policyAcceptances   UserPolicyAcceptance[]
  paypalSubscriptions PayPalSubscription[]
  lessonPlans        LessonPlan[]
}

model UserPolicyAcceptance {
  id         Int     @id @default(autoincrement())
  user       User    @relation(fields: [userId], references: [id])
  userId     String
  policyType String   // e.g., "terms", "privacy"
  accepted   Boolean  @default(false)
  acceptedAt DateTime @default(now())

  @@unique([userId, policyType])
}

model Quiz {
  id           Int        @id @default(autoincrement())
  title        String
  instructions String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  userId       String
  user         User       @relation(fields: [userId], references: [id])
  questions    Question[]
}

model Question {
  id          Int      @id @default(autoincrement())
  question    String
  options     String[]
  answer      String
  explanation String?
  hint        String?
  quizId      Int
  quiz        Quiz     @relation(fields: [quizId], references: [id])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model PayPalSubscription {
  id               String   @id @default(cuid())
  subscriptionId   String   @unique
  planId           String
  planType         String
  status           String
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  startTime        DateTime
  nextBillingTime  DateTime?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model PublicUsage {
  id        String    @id
  count     Int       @default(0)
  resetAt   DateTime?
  updatedAt DateTime  @updatedAt
  createdAt DateTime  @default(now())
  ip        String?
}

model BlogPost {
  id              String   @id @default(cuid())
  title           String
  slug            String   @unique
  excerpt         String
  content         String   // markdown or HTML
  metaTitle       String
  metaDescription String
  published       Boolean  @default(true)
  featuredImage   String?  // Optional image URL
  authorName      String?  // Optional
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model LessonPlan {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title         String
  topic         String
  subject       String
  grade         String
  duration      String
  days          Int
  minutesPerDay Int
  data          Json
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId, createdAt])
}


model Document {
  id         String   @id @default(cuid())
  namespace  String
  sourceUrl  String?
  title      String?
  sourceType String?  // "web" | "pdf" | "pptx" | "docx" | "text"
  chunkIndex Int
  content    String
  embedding  Unsupported("vector")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([namespace])
  @@index([sourceUrl])
}

model SemanticCache {
  id        String   @id @default(cuid())
  namespace String
  prompt    String
  response  String
  embedding Unsupported("vector")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([namespace])
}
